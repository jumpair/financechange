/* pages/index/index.wxss */
.container{
    background-color: #ffffff;
}
.main{
    padding-bottom: 40rpx;
}
.index-nav {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
    align-items: center;
    padding: 40rpx 0;
}

.index-nav-item {
    width: 25%;
    display: flex;
    flex-direction: column;
    text-align: center;
}

.index-nav-item:nth-child(-n+4) {
    margin-bottom: 40rpx;
}

.index-nav-item .img {
    width: 120rpx;
    height: 120rpx;
    margin: 0 auto;
}

.index-nav-item:nth-child(n+5) .img {
    width: 80rpx;
    height: 80rpx;
}

.index-nav-item .text {
    font-size: 24rpx;
    color: #000000;
    text-align: center;
}

.index-number {
    padding-top: 20rpx;
}

.index-number .title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333333;
    text-align: center;
    display: block;
}

.index-number-list {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
    align-items: center;
    padding-top: 36rpx;
}

.index-number-list .item {
    width: calc(50% - 3rpx);
    display: flex;
    flex-direction: column-reverse;
    justify-content: space-between;
    align-items: center;
    padding-left: 64rpx;
    box-sizing: border-box;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    padding-right: 70rpx;
}

.index-number-list .item .text {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.index-number-list .item .text .p {
    font-size: 40rpx;
    font-weight: bold;
    color: #333333;
    text-align: center;
}

.index-number-list .item .text .p .p1 {
    font-size: 24rpx;
    color: #999999;
    padding-left: 5rpx;
}

.index-number-list .item .text .sp {
    font-size: 24rpx;
    color: #999999;
}

.index-number-list .item:nth-child(1) {
    background: #FCF9F5;
    margin-bottom: 6rpx;
}

.index-number-list .item:nth-child(2) {
    margin-bottom: 6rpx;
    background: #F8FCF5;
}

.index-number-list .item:nth-child(3) {
    background: #F5F9FC;
}

.index-number-list .item:nth-child(4) {
    background: #FBF5FC;
}

.index-number-list .item:nth-child(1) .img {
    width: 60rpx;
    height: 45rpx;
}

.index-number-list .item:nth-child(2) .img {
    width: 60rpx;
    height: 54rpx;
}

.index-number-list .item:nth-child(3) .img {
    width: 60rpx;
    height: 60rpx;
}

.index-number-list .item:nth-child(4) .img {
    width: 60rpx;
    height: 60rpx;
}

.index-product {
    padding-top: 30rpx;
    background-color: #ffffff;
}

.index-product-list-hot {
    background-color: #F0F7FD;
}

.index-product-list-hot .item {
    background-color: #FAFEFF;
    padding-top: 30rpx;
    margin-bottom: 14rpx;
}

.index-product-list-hot .item:nth-child(1) {
    border-top: 1px solid #E7F2FC;
    margin-top: 40rpx;
}

.index-product-list-hot .item .item-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
}

.index-product-list-hot .item .item-top .item-name {
    font-size: 32rpx;
    color: #333333;
    padding-left: 6rpx;
    display: flex;
    align-items: center;
}

.index-product-list-hot .item .item-top .item-name .img {
    width: 54rpx;
    height: 54rpx;
    margin-right: 10rpx;
}

.index-product-list-hot .item .item-top .more {
    width: 160rpx;
    height: 60rpx;
    background: #36A4FF;
    border-radius: 100rpx;
    font-size: 24rpx;
    color: #FFFFFF;
    text-align: center;
    line-height: 60rpx;
}

.index-product-list-hot .item .item-content {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 34rpx 0;
}

.index-product-list-hot .item .item-content .content-item:nth-child(3) {
    width: 160rpx;
}

.index-product-list-hot .item .item-content .sp {
    font-size: 24rpx;
    color: #999999;
}

.index-product-list-hot .item .item-content .p {
    font-size: 36rpx;
    font-weight: bold;
    color: #333333;
}

.index-product-list-hot .item .item-bottom {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid #D3E6FB;
    padding: 20rpx 0;
}

.index-product-list-hot .item .item-bottom .name {
    width: calc(100% - 20rpx)
}

.index-product-list-hot .item .item-bottom .name .t {
    font-size: 28rpx;
    color: #666666;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.index-product-list-hot .item .item-bottom .name .img {
    width: 20rpx;
    height: 25rpx;
    margin-left: 10rpx;
}

.index-product-list-hot .item .item-bottom .more {
    width: 20rpx;
}

.index-product-list-hot .item .item-bottom .more .img {
    height: 22rpx;
    width: 12rpx;
}
.index-product-list{
    background-color: #F5F5F5;
    padding-top: 14rpx;
    padding-bottom: 14rpx;
}
.index-news{
    padding-top: 36rpx;
}
.index-news-list{
    border-top: 1px solid #eeeeee;
    margin-top: 24rpx;
}

.item{
    padding-top: 30rpx;    
}
.item .box{
  overflow: hidden;
}
.left{
    width: calc(100% - 240rpx);
    float: left;
    padding-right: 66rpx;
    box-sizing: border-box;
}
.left .t{
font-size: 28rpx;
font-weight: bold;
line-height: 40rpx;
color: #333333;
height: 80rpx;
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
}
.left .time{
font-size: 24rpx;
color: #CCCCCC;
display: flex;
flex-direction: row;
align-items: center;
justify-content: flex-start;
padding-top: 30rpx;
}
.left .time .img{
    width: 26rpx;
    height: 26rpx;
    margin-right: 10rpx;
}
.right{
    width: 240rpx;
    height: 160rpx;
    float: left;
}
.right .img{
    width: 100%;
    height: 100%;
}


.index_ptsj .title{
    height: 122rpx;
    width: 100%;
    background-color: #F5F5F5;
    display: flex;
    align-items: center;
    justify-content: center;
}
.index_ptsj .title .img{
    width: 32rpx;
    height: 32rpx;
}
.index_ptsj .title .text{
    font-size: 36rpx;
    color: #333333;
    font-weight: 500;
    padding-left: 16rpx;
    line-height: 44rpx;
}
.index_ptsj .con_01{
    background-color: #ffffff;
    padding: 48rpx 0rpx 0;
}
.index_ptsj .con_01 .text{
    display: flex;
    align-items: flex-end;
    justify-content: flex-start;
    padding: 0 32rpx;
}
.index_ptsj .con_01 .text .t1{
    font-size: 72rpx;
    color: #0B7BF9;
    font-weight: bold;
    line-height: 72rpx;
}
.index_ptsj .con_01 .text .t2{
    font-size: 32rpx;
    color: #565656;
    line-height: 33rpx;
    padding-left: 20rpx;
    padding-bottom: 10rpx;
}
.index_ptsj .con_01 .list:after{
    content: '';
    clear: both;
    display: block;
}
.index_ptsj .con_01 .list .item{
    float: left;
    width: 25%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    padding: 32rpx 0;
    position: relative;
}
.index_ptsj .con_01 .list .item .t1{
    font-size: 28rpx;
    color: #565656;
    font-weight: 400;
    line-height: 42rpx;
    padding-bottom: 10rpx;
}
.index_ptsj .con_01 .list .item .t2{
    font-size: 36rpx;
    color: #333;
    font-weight: 400;
    line-height: 42rpx;
    padding-top: 5rpx;
}
.index_ptsj .con_01 .list .item:not(:last-child):after{
    content: '';
    width: 2rpx;
    height: 18rpx;
    background-color: #ccc;
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
}
.index_ptsj .con_02{
    padding: 12rpx 32rpx 0;
}
.index_ptsj .con_02 .list{
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-flow: row wrap;
    border-top: 2rpx solid #eee;
    padding-top: 48rpx;
}
.index_ptsj .con_02 .list .item{
    width: 328rpx;
    height: 148rpx;
    position: relative;
    padding: 28rpx 32rpx 0;
    margin-bottom: 32rpx;
}
.index_ptsj .con_02 .list .item .image{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}
.index_ptsj .con_02 .list .item .t1{
    font-size: 28rpx;
    color: #999;
    font-weight: 400;
    position: relative;
    z-index: 2;
}
.index_ptsj .con_02 .list .item .t2{
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
    position: relative;
    z-index: 2;
    padding-top: 20rpx;
    
}
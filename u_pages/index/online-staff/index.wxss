.nav {
    background: #F9F9F9;
    box-sizing: border-box;
}

.list-item {
    height: calc(100vh - 216rpx);
    background: #ffffff;
    border-top: 1px solid #e5e5e5;
    position: relative;
    padding-top: 50rpx;
}

.list-item {
    height: calc(100vh - 80rpx);
    box-sizing: border-box;
}
.padding60{
    padding: 0 60rpx;
}
.item-p1 .title{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.item-p1{
    margin-bottom: 56rpx;
}
.item-p1 .title .img{
    width: 55rpx;
    height: 11rpx;
}
.item-p1 .title .z{
font-size: 32rpx;
font-weight: bold;
color: #FF9E00;
margin: 0 24rpx;
}
.item-p2{
height: 260rpx;
background: #FFFFFF;
box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.16);
border-radius: 12rpx;
position: relative;
display: flex;
align-items: center;
justify-content: flex-end;
margin-top: 90rpx;
}
.item-p2 .image{
    width: 200rpx;
    height: 254rpx;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    border-radius: 12rpx;
    position: absolute;
    left: 30rpx;
    top: -36rpx;
}
.item-p2 .text{
    width: calc(100% - 230rpx);
    padding-left: 40rpx;
    padding-right: 26rpx;
}
.item-p2 .text .t{
    font-size: 28rpx;
    color: #000000;
    font-weight: bold;
}
.item-p2 .text .sp{
    font-size: 28rpx;
    color: #666666;
}
.item-p2 .text .t,
.item-p2 .text .sp{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
}
.item-p2 .text .left{
    width: 90rpx;
    line-height: 44rpx;
}
.item-p2 .text .right{
    width: calc(100% - 90rpx);
    line-height: 44rpx;
}
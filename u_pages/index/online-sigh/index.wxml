<view class="main">
    <view class="box">
        <form bindsubmit="goSign" report-submit>
        <view class="white-box">
            <van-cell-group>
                <van-field  name="name" input-align="center" label="用户名：" placeholder="请输入用户名" value="{{name}}" />
                <van-field  name="phone" input-align="center" label="电话：" placeholder="请输入电话" value="{{phone}}" />
                <van-field  name="company_name" input-align="center" label="公司名称：" placeholder="请输入公司名称" value="" />
                <van-field  name="activity_people" input-align="center" label="姓名：" placeholder="请输入姓名" />
                <van-field  name="position" input-align="center" label="职位：" placeholder="请输入职位" />
                <van-field  name="tj_people" input-align="center" label="推荐人：" placeholder="请输入推荐人" />
            </van-cell-group>
        </view>
        <button class="submit"  formType="submit">提交</button>
     </form>
    </view>
</view>
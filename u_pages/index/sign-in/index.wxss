.main {
    background-color: #F9F9F9;
    min-height: 100vh;
}

.top {
    height: 340rpx;
    padding-top: 90rpx;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

.t {
    font-size: 32rpx;
    font-weight: bold;
    color: #FFFFFF;
    text-align: center;
}
.content {
    position: relative;
    top: -90rpx;
    padding-bottom: 100rpx;
}

.content .box {
    background-color: #ffffff;
    border-radius: 12rpx;
    padding: 30rpx 30rpx 70rpx;
}

.black-time {
    font-size: 28rpx;
    color: #333333;
}

.item{
font-size: 28rpx;
line-height: 19px;
color: #333333;
overflow: hidden;
padding: 30rpx 0;
border-bottom: 1px dotted #eeeeee;
}
.item text:nth-child(1){
    float: left;
    width: 140rpx;
}
.item text:nth-child(2){
    float: left;
    width: calc(100% - 140rpx);
}


.submit {
    height: 80rpx;
    background: #0B7BF9;
    border-radius: 50rpx;
    font-size: 28rpx;
    color: #ffffff;
    line-height: 80rpx;
    text-align: center;
    position: fixed;
    left: 30rpx;
    right: 30rpx;
    bottom: 60rpx;
}
.tc{
    width: 520rpx;
    height: 690rpx;
    background-color: transparent!important;
    overflow: visible!important;
}
.tc-box{
    width: inherit;
    height: inherit;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    padding: 0 30rpx;
    position: relative;
}
.tc-t{
    font-size: 36rpx;
    font-weight: bold;
    color: #FF9E00;
    text-align: center;
    border-bottom: 1px dotted #eeeeee;
    padding: 60rpx 0 40rpx;
}
.tc-img{
    text-align: center;
    width: 300rpx;
    height: 300rpx;
    border: 1px solid #eeeeee;
    margin: 60rpx auto 0;
    display: flex;
    align-items: center;
    justify-content: center;
}
.tc-img image{
    width: 280rpx;
    height: 280rpx;
}
.tc-text{
font-size: 28rpx;
color: #333333;
margin-top: 50rpx;
text-align: center;
}
.tc-icon{
    position: absolute;
    height: 150rpx;
    width: 288rpx;
    bottom: -30rpx;
    right: -100rpx;
}
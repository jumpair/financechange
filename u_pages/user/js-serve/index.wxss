.main{
    height: 100vh;
    background-color: #F5F5F5;
    border-top: 1px solid #eeeeee;
}
.list-item{
    height: 100vh;
    background-color: #F5F5F5;
}
.item{
    background-color: #ffffff;
    padding-top: 40rpx;
    margin-bottom: 20rpx;
}
.item-t{
font-size: 36rpx;
font-weight: bold;
color: #333333;
}
.item-n{
    padding: 45rpx 0 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #eeeeee;
}
.n text:nth-child(1){
    font-size: 24rpx;
    color: #999999;
    display: block;
}
.n text:nth-child(2){
    font-size: 36rpx;
    color: #333333;
}
.item-p{
    padding: 30rpx 0;
    display: flex;
    align-items: center;
    justify-content: center;
}
.item-p>view{
    font-size: 24rpx;
    color: #666666;
    display: inline-block;
    flex: 1;
}
.item-p>view>text{
    color: #FF9E00;
    font-size: 28rpx;
}
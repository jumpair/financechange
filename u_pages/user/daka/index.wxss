page{
    background-color: #f5f5f5;
}
.my_container{
    height: 100vh;
    position: relative;
}
.my_container{
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}
.top{
    width: 750rpx;
    height: 132rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    background-color: rgba(255,255,255,.9);
    border-radius: 0 0 20rpx 20rpx;
    padding: 0 32rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}
.top .img{
    width: 35rpx;
    height: 42rpx;
}
.top .t1{
    font-size: 28rpx;
    color: #999999;
    padding-left: 24rpx;
}
.top .t2{
    font-size: 28rpx;
    color: #666666;
    padding-left: 8rpx;
}
.btm{
    width: 750rpx;
    height: 554rpx;
    border-radius: 20rpx 20rpx 0 0;
    background-color: rgba(255,255,255,.9);
    position: absolute;
    bottom: 0;
    left: 0;
    padding: 0 32rpx;
}
.btm .name{
    font-size: 32rpx;
    text-align: center;
    color: #333;
    padding: 48rpx 0;
}
.btm .p2{
    width: 100%;
    height: 188rpx;
    border-radius: 24rpx;
    background-color: rgba(230, 244, 254, .5);
    padding: 32rpx 32rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    position: relative;
}
.btm .p2:after{
    content: '';
    position: absolute;
    width: 0;
    height: 80rpx;
    border-right: 2rpx dashed #999;
    top: 50%;
    transform: translateY(-50%);
    left: 157rpx;
    z-index: 1;
}
.btm .p2 .t{
    display: flex;
    align-items: center;
    justify-content: flex-start;
    position: relative;
    z-index: 2;
}
.btm .p2 .t .time{
    font-size: 28rpx;
    column-rule: #333;
    width: 90rpx;
}
.btm .p2 .t .q{
    width: 28rpx;
    height: 28rpx;
    border-radius: 50%;
    background-color: #E6E6FF;
    margin: 0 24rpx;
    position: relative;
}
.btm .p2 .t .q:after{
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 22rpx;
    height: 22rpx;
    border-radius: 50%;
    background-color: #5257FD;
}
.btm .p2 .t:nth-child(2) .q{
    background-color: #FFE1D0;
}
.btm .p2 .t:nth-child(2) .q:after{
    background-color: #FB9154;
}
.btm  .btn{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 64rpx;
}
.btm  .btn .btn_{
    width: 328rpx;
    height: 104rpx;
    border-radius: 52rpx;
    color: #fff;
    font-size: 40rpx;
    line-height: 104rpx;
    font-weight: 500;
    text-align: center;
}
.btm  .btn .btn_:nth-child(1){
    background-color: #5257FD;
}
.btm  .btn .btn_:nth-child(2){
    background-color: #54DABA;
}
.main {
    background-color: #F9F9F9;
    min-height: 100vh;
}

.top {
    height: 340rpx;
    padding-top: 90rpx;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

.t {
    font-size: 32rpx;
    font-weight: bold;
    color: #FFFFFF;
    text-align: center;
}

.t1 {
    font-size: 28rpx;
    color: #FFFFFF;
    text-align: center;
    padding-top: 6rpx;
}

.content {
    position: relative;
    top: -90rpx;
}

.content .box {
    background-color: #ffffff;
    border-radius: 12rpx;
    padding: 60rpx 30rpx 70rpx;
}

.black-t {
    font-size: 36rpx;
    font-weight: bold;
    color: #333333;
}

.public-t {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    margin-top: 30rpx;
}

.public-t .img {
    width: 20rpx;
    height: 24rpx;
}

.public-t .text {
    font-size: 24rpx;
    color: #AAAAAA;
    margin-left: 10rpx;
}

.text1 {
    font-size: 28rpx;
    color: #333333;
    margin-top: 20rpx;
    display: block;
    border-bottom: 1px solid #eeeeee;
    padding-bottom: 26rpx;
    margin-bottom: 60rpx;
}

.score {
    margin-top: 20rpx;
    position: relative;
    left: -10rpx;
}

.submit {
    width: 300rpx;
    height: 80rpx;
    background: #FFFFFF;
    border: 1px solid #0B7BF9;
    border-radius: 44rpx;
    font-size: 28rpx;
    color: #0B7BF9;
    line-height: 80rpx;
    text-align: center;
    margin: 90rpx auto 0;
}
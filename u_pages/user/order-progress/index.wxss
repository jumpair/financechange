.main{
    min-height: 100vh;
    background-color: #F9F9F9;
    padding-bottom: 50rpx;
}
.step{
    padding-top: 50rpx;
}
.step-item{
    padding-left: 60rpx;
    position: relative;
    z-index: 2;
}
.step-item:not(:first-child){
    margin-top: 50rpx;
}
.t{
font-size: 32rpx;
font-weight: bold;
color: #333333;
position: relative;
}
.t image{
    width: 26rpx;
    height: 26rpx;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: -58rpx;
}
.t image:nth-child(1){
    display: none;
}
.step-item:nth-child(1) .t image:nth-child(1){
    display: block;
}
.step-item:nth-child(1) .t image:nth-child(2){
    display: none;
}
.t-item{
    background-color: #fff;
    border-radius: 12rpx;
    padding: 24rpx 28rpx;
    margin-top: 20rpx;
    position: relative;
}
.t-item:after{
    content: '';
    width: 14rpx;
    height: 14rpx;
    background: #CCCCCC;
    border-radius: 50%;
    opacity: 1;    
    position: absolute;
    left: -51rpx;
    top: 50%;
    transform: translateY(-50%);
}
.p text:nth-child(1){
font-size: 28rpx;
color: #333333;
}
.p text:nth-child(2){
font-size: 24rpx;
color: #CCCCCC;
display: inline-block;
padding-left: 16rpx;
}
.sp{
font-size: 24rpx;
color: #666666;
margin-top: 10rpx;
}
.step{
    position: relative;
}
.step:after{
    content: '';
    height: calc(100% - 100rpx);
    width: 1rpx;
    background-color: #ccc;
    position: absolute;
    top: 60rpx;
    left: 16rpx;
    z-index: 1;
}
.main {
    background: #F9F9F9;
    height: calc(100vh);
    position: relative;
    z-index: 10;
    position: relative;
    padding-bottom: 20rpx;
}

.main:after {
    content: '';
    width: 100%;
    background-color: var(--main-color);
    height: 30vw;
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    z-index: -1;
}

.white-box {
    position: relative;
    z-index: 10;
    background-color: #fff;
    border-radius: 12rpx;
    padding: 40rpx;
    border: 1px solid #eeeeee;
}

.public-t {
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.name-box .public-t .img {
    width: 20rpx;
    height: 24rpx;
}

.product-intr .public-t .img {
    width: 24rpx;
    height: 23rpx;
}

.public-t .text {
    font-size: 24rpx;
    color: #AAAAAA;
    margin-left: 10rpx;
}

.name-box {
    border-bottom: 1px solid #eeeeee;
    padding: 34rpx 0;
}

.name {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
    margin-top: 10rpx;
}

.name .text {
font-size: 36rpx;
color: #333333;
font-weight: bold;
padding-top: 20rpx;
}


.product-intr {
    padding: 60rpx 0 20rpx;
}

.product-intr .des {
    padding-top: 20rpx;
}

.product-intr .des .text {
    display: block;
    font-size: 28rpx;
    color: #333333;
    line-height: 1.5;
}


/* 公共底部start */
.bottom-btn {
    display: flex;
    border-top: 1px solid #eeeeee;
    padding-top: 20rpx;
}

.flex1 {
    flex: 3;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
}

.flex2 {
    flex: 4;
}

/* 公共底部end */
.serve-project{
    display: flex;
    flex-direction: row;
    align-self: center;
    justify-content: center;
    padding: 50rpx 0 0rpx;
}
.serve-project .image{
    height: 40rpx;
    width: 40rpx;
    background-color: #FF9E00;
    border-radius: 50%;
    background-size: 20rpx;
    background-repeat: no-repeat;
    background-position: center;
}
.serve-project .text{
font-size: 24rpx;
color: #FF9E00;
margin-left: 32rpx;
padding-top: 4rpx;
}

.project-list .item-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
}

.project-list .item-top .item-name {
    font-size: 32rpx;
    color: #333333;
    padding-left: 6rpx;
    font-weight: bold;
}

.project-list .item-top .more {
    width: 160rpx;
    height: 60rpx;
    background: transparent;
    border: 2rpx solid  #36A4FF;
    border-radius: 100rpx;
    font-size: 24rpx;
    color: #36A4FF;
    text-align: center;
    line-height: 60rpx;
}

.project-list .item-content {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 34rpx 0 0;
}

.project-list .item-content .content-item:nth-child(3) {
    padding-right: 30rpx;
}

.project-list .item-content .sp {
    font-size: 24rpx;
    color: #999999;
}

.project-list .item-content .p {
    font-size: 36rpx;
    font-weight: bold;
    color: #FF9E00;
}
.p-n{
    font-size: 36rpx;
    font-weight: bold;
    color: #FF9E00;
    text-align: right;
    }
.p-sp{
    font-size: 28rpx;
    color: #333333;
    text-align: right;
    }

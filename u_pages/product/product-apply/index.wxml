<view class="main">
    <view class="box">
        <view class="card" style="background-image: url(../../../assets/images/card_bg.png);">
            <view class="p">{{name}}</view>
            <view class="sp">{{jg_name}}</view>
            <view class="b">订单类型：电话咨询</view>
        </view>
        <form bindsubmit="goApplySuccess" report-submit>
        <view class="white-box" style="margin-top: 46rpx;">
            <van-cell-group>
                <van-field name="company_name" value="" label="企业名称" placeholder="请输入企业名称" />
                <van-field name="company_phone" value="" label="手机号" placeholder="请输入手机号" border="{{ false }}" />
                <van-field name="code"  center clearable label="验证码" placeholder="请输入短信验证码" border="{{ false }}"
                    use-button-slot>
                    <van-button slot="button" type='primary' size="small" color="#f5f5f5" round custom-class="yzm-btn">
                        获取验证码
                    </van-button>
                </van-field>
                <van-field name="message" value="{{ message }}" label="留言" type="textarea" placeholder="请输入留言" autosize
                    border="{{ false }}" />
            </van-cell-group>
        </view>
        <view style="margin-top: 72rpx;">
            <button type="submit" block color="#0B7BF9" formType="submit" round >提交订单</button>
        </view>
    </form>
    </view>
</view>
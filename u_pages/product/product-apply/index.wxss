.main {
    min-height: 100vh;
    background: #F9F9F9;
    border-top: 1px solid rgba(0, 0, 0, .1);
    padding: 30rpx 0;
}

.card {
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    height: 300rpx;
    border-radius: 10rpx;
    padding-left: 60rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}

.card .p {
    font-size: 36rpx;
    font-weight: bold;
    color: #FFFFFF;
}

.card .sp {
    font-size: 28rpx;
    font-weight: bold;
    color: #FFFFFF;
    margin: 10rpx 0 20rpx;
}

.card .b {
    display: inline-block;
    font-size: 24rpx;
    color: #FFFFFF;
    border: 1px solid#fff;
    border-radius: 100rpx;
    padding: 10rpx 20rpx;
}

.white-box{
    background-color: #fff;
    border-radius: 10rpx;
    border: 1px solid #eeeeee;
    padding: 0rpx 30rpx;
}
.yzm-btn{
    color: #aaaaaa!important;
}
<view class="tabbar">
    <view class="tabbar-item" wx:for="{{list}}" wx:key="index" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
        <image class="img" src="{{selected === index ? item.selectedIconPath : item.iconPath}}"></image>
        <text class="t" style="color: {{selected === index ? selectedColor : color}}">{{item.text}}</text>
    </view>
</view>

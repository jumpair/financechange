/* components/swiper/IndexBanner.wxss */
.img,
.swiper {
    height: 73vw;
    width: 100%;
}

.index-top {
    position: relative;
}

.status {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
    padding-bottom: 10rpx;
}
.status.bg{
    background-color: #fff;
    border-bottom: 1px solid #eeeeee;
}
.status .status-name {
    height: 64rpx;
    line-height: 64rpx;
    color: #fff;
    font-weight: bold;
    padding-left: 30rpx;
    margin-top: 4rpx;
}
.status.bg .status-name{
    color: #333;
}
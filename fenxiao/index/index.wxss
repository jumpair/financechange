page {
    height: 100%;
}

._page {
    height: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
}

.swiper,._page-top {
    height: 150rpx!important;
}

._page-top {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

swiper-item[class*="false"] ._page-top {
    opacity: .5;
}

._page-top .item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

swiper-item[class*="true"] ._page-top .yue {
    font-size: 22rpx;
}

._page-top .yue {
    font-size: 24rpx;
    padding-bottom: 30rpx;
    opacity: .6;
}

swiper-item[class*="true"] ._page-top .money {
    font-size: 50rpx;
}

._page-radius {
    height: 60rpx;
    width: 100vw;
    display: flex;
    flex-direction: column-reverse;
}

._page-float {
    display: flex;
    justify-content: center;
    position: absolute;
    height: 60rpx;
    width: 100%;
}

._page-float .content {
    height: 60rpx;
    border-radius: 5000rpx;
    padding: 0 40rpx;
    box-shadow: 0 0 10rpx rgba(0,0,0,.15);
    align-items: center;
}

._page-float .content button {
    text-align: center;
    font-size: 26rpx;
    min-width: 52rpx;
}

._page-panel {
    background: #FFFFFF;
    margin: 30rpx;
    padding: 20rpx;
    color: #b2b2b2;
    border-radius: 6rpx;
}

._page-panel .item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20rpx 0;
    min-height: 196rpx;
}

._page-panel .item image {
    width: 80rpx;
    height: 80rpx;
    opacity: .8;
}

.user {
    display: flex;
    align-items: center;
    padding: 20rpx 30rpx;
    margin: 30rpx;
    background-color: rgba(255,255,255,.3);
    border-radius: 6rpx;
}

.user image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 5000rpx;
}

.grid.col-3>button {
    width: 33.33%;
}